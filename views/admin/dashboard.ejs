<div style="text-align:center; display: flex; justify-content: center; align-items: center;">
<a href="/add-post" >
    <button class="btn" style="background-color: white; color: rgba(16, 10, 46);">
        Add new +
    </button>
</a>
</div>
<ul class="admin-posts">
    <% data.forEach(post => { %>
     <li class="li__dashboard">

        <a href="/post/<%= post._id %>">
            <%= post.title %> &nearr;
        </a>
        <div class="admin-post-controls">
            <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
            <form action="delete-post/<%= post._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn"  style="border-color:rgb(241, 44, 44); background-color:rgb(241, 44, 44); color: rgb(255, 255, 255);"/>
            </form>
        </div>
     </li>
    <% }) %>
</ul>